<%= form_with(model: appointment, local: true) do |form| %>
  <div class="field">
    <%= form.label :type_id %>
      <%= form.collection_select :type_id, Type.order(:id),:id,:name, {}, {class: "form-select form-select-lg mb-3"} %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: 'form-control' %>
  </div>
    
    <%# <div class="field">
          <h3><%= appointment.user.name %></h3>
    <%#</div> %>

  <div class="field">
    <%= form.label :appointments %>
    <%= form.datetime_local_field :appointments, class: 'form-control'%>
  </div>

  <div class="actions" style="text-align: right;">
    <%= form.submit "Registrar", class: 'btn btn-info'%>
    <%= link_to 'Back', appointments_path, class: 'btn btn-danger' %>
  </div>

  <% if appointment.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert" id="alert">
      <% appointment.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>    
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true" onclick="closeAlert()">&times;</span>
      </button>
    </div>
  <% end %>
<% end %>